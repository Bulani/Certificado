{$R *.dfm}

uses u_CadastroPadraoCidadesJSON, u_CadastroPadraoPessoas,
      u_CadastroPadraoTiposCertificados, u_CadastroPadraoCertificados,
  u_rel_tiposCertificados;

{==========================================================}
