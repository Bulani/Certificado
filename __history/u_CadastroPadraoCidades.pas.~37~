  Data.Bind.Components, Data.Bind.ObjectScope;

type
  Tfrm_CadastroPadraoCidades = class(Tfrm_CadastroPadrao)
    q_dadoscod_cidade: TFDAutoIncField;
    q_dadosnome: TStringField;
